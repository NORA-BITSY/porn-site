# Environment Configuration for Production
# Copy this file to .env and modify values as needed

# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ultimate-porn-space

# SSL/Security Configuration
DOMAIN=porn.realproductpat.com
SSL_EMAIL=admin@realproductpat.com

# Nginx Configuration
NGINX_USER=www-data
WEBROOT=/var/www/html

# Application Settings
SESSION_SECRET=your-super-secret-session-key-change-this
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/porn-site/app.log

# External API Settings (if needed)
API_TIMEOUT=10000
API_RETRY_ATTEMPTS=3

# Security Headers
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000

# Content Settings
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,mp4,webm

# Cache Settings
STATIC_CACHE_TTL=86400
API_CACHE_TTL=300
