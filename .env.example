# Environment Configuration for Ultimate Porn Space
# Copy this file to .env and modify values as needed

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=production
PORT=3000
DOMAIN=porn.realproductpat.com

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
MONGODB_URI=mongodb://localhost:27017/ultimate-porn-space

# ===========================================
# SSL/SECURITY CONFIGURATION
# ===========================================
SSL_EMAIL=admin@realproductpat.com
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000

# ===========================================
# SESSION & AUTHENTICATION
# ===========================================
SESSION_SECRET=your-super-secret-session-key-change-this-to-random-64-chars
BCRYPT_ROUNDS=12

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# ===========================================
# EXTERNAL API CONFIGURATION
# ===========================================
# RedTube API (currently used)
REDTUBE_API_BASE=https://api.redtube.com
API_TIMEOUT=10000
API_RETRY_ATTEMPTS=3

# PornHub API (future integration)
PORNHUB_API_KEY=your_pornhub_api_key

# ===========================================
# LOGGING & MONITORING
# ===========================================
LOG_LEVEL=info
LOG_FILE=/var/log/porn-site/app.log
ENABLE_ACCESS_LOGS=true

# ===========================================
# CONTENT SETTINGS
# ===========================================
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,mp4,webm
PAGINATION_LIMIT=24

# ===========================================
# CACHE SETTINGS
# ===========================================
STATIC_CACHE_TTL=86400
API_CACHE_TTL=300
ENABLE_REDIS_CACHE=false
REDIS_URL=redis://localhost:6379

# ===========================================
# NGINX CONFIGURATION
# ===========================================
NGINX_USER=www-data
WEBROOT=/var/www/html

# ===========================================
# DEVELOPMENT/DEBUG
# ===========================================
DEBUG=false
ENABLE_STACK_TRACES=false